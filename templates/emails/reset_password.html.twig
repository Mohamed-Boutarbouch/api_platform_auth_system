{% extends 'base.html.twig' %}

{% block body %}
    <p><strong>Hello {{ user.email }}</strong>,</p>
    <p>To reset your password, please follow the link below:</p>
    <a href="{{ reset_password_url }}" class="button">Reset my password</a>
    <p>This link is valid for 24 hours.</p>
    <p>If you did not request this, please ignore this email.</p>
    <p class="sub">If you're having trouble clicking the
        password reset button, copy and paste the following link into your browser:</p>
    <a href="{{ reset_password_url }}">
        {{ reset_password_url }}
    </a>
    <p class="sub">

    </p>
{% endblock %}
